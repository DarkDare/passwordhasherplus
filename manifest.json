{
	"name": "Password Hasher Plus",
	"version": "1.0.0",
	"description": "Password Hasher Plus automatically enhances password strength (length and difficulty) to protect your accounts.",
	"icons": { "64": "images/icon.png", "128": "images/icon.png" },

	"background_page": "background.html",

	"browser_action": {
		"default_icon": "images/passhash.png",
		"default_title": "Password Hasher",
		"popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["lib/jquery-1.4.2.min.js", "lib/sha1.js", "lib/passhashcommon.js", "content-script.js"],
			"css": ["styles.css"],
			"run_at": "document_end",
			"all_frames": true
		}
	],

	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	]
}
